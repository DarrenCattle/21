.complete-or-fail {
    text-align: center;
    margin: 0.5rem 0 1.5rem;
}

.complete-or-fail .button {
    width: 120px;
    margin: 10px 10px 0;
    padding: 10px 0;
    display: inline-block;
    border: solid 3px #fff;
    border-radius: 2000px;
    font-weight: 500;
    color: white;
    text-transform: uppercase;

    &.button-primary {
        color: #00c3d9;
    }

    &.complete {
        background-color: #2fc96c;
        &:hover {
            background-color: #1eb87b;
            opacity: 1;
        }   
    }

    &.fail {
        background-color: #ff4c4c;
        &:hover {
            background-color: #ee3b3b;
            opacity: 1;
        }
    }

}

#day {
    margin: 1rem auto 0;
    display: block;
    height: 8.5rem;
    width: 8.5rem;
    line-height: 8.5rem;

    -moz-border-radius: 50%;
    border-radius: 50%;

    background-color: white;
    color: #00c3d9;
    text-align: center;
    font-size: 5rem;
}

.changed-your-mind {
    font-size: 1.2rem;
    font-weight: 800;
    text-decoration: underline;
}

.feed {
    ul {
        list-style-type: none;
        padding-left: 0px;
    }
    h1 {
        text-align: center;
    }

    .feed-container {
        padding: 0px;
        border-radius: 4px;
    }

    .activity {
        border: 1px solid #eee;
        border: 1px solid rgba(0,0,0,0.08);
        border-radius: 4px;
        margin: 10px 0;
        background-color: white;

        .profile-pic-container {
            width: 5.5rem;
            float: left;
            display: block;
            padding: 10px;
            margin-right: 0.75rem;
            border-radius: 4px 0 0 4px;
        }        

        .profile-pic-container img{
            height: 4rem;
            width: 4rem;
            border: solid 0.23rem white;
        }

        .day-container {
            width: 4.5rem;
            float: left;
            display: block;
            background-color: #fdb915;
            border-radius: 50px;
            text-align: center;
            margin-top: 0.5rem;
        }

        .day {
            color: white;
            text-transform: uppercase;
        }

        .content {
            // padding on the left is the sum of profile-pic-container width plus its margin-right
            padding: 0.25rem 0.75rem 0.25rem 11.25rem;
            color: #888;

            .name {
                font-size: 1.1rem;
                font-weight: 600;
                margin-right: 2px;
            }

            .first-line {
                display: block;
                margin-bottom: -3px;
                font-size: 0.9rem;
            }

            .time-ago {
                color: #00c3d9;
                margin-right: 0.25rem;
            }

            .challenge {
                font-size: 0.9rem;
                color: #888;
            }

            .message {
                color: #333;
            }

        }

        &.update-days .profile-pic-container {
            background-color: #2fc96c;
        }
        &.reset-days .profile-pic-container {
            background-color: #ff4c4c;
        }
        &.create .profile-pic-container {
            background-color: #7b0051;
        }
        &.destroy .profile-pic-container {
            background-color: black;
        }
    }
}

@media(max-width: 767px){
    .sidebar-content{
        padding-top: 0px;
    }
    #day {
        margin-top: 0px;
    }
    .complete-or-fail .button {
        width: 100px;
        margin: 5px 5px 0;
    }
    .sidebar-content p.challenge-info {
        font-size: 1.5rem;
    }
}

