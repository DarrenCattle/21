/* Start Sidebar */
/* Start Sidebar */

$sidebar-width: 33%;
$sidebar-width-xs: 100%;

#wrapper {
    padding-left: 0;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
    &.toggled {
        padding-left: $sidebar-width;

        #sidebar-wrapper {
            width: $sidebar-width;
        }

        #page-content-wrapper {
            position: absolute;
            margin-right: -$sidebar-width;
        }
    }

}

#sidebar-wrapper {
    z-index: 1000;
    position: fixed;
    left: $sidebar-width;
    width: 0;
    height: 100%;
    margin-left: -$sidebar-width;
    overflow-y: auto;
    background: #00c3d9;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;

}

.sidebar-content {
    padding: 20px;
    text-align: center;

    p, a {
        color: white;
    }

    p.challenge-info-title {
        margin-top: 15px;
        margin-bottom: 0px;
        text-transform: uppercase;
    }

    p.challenge-info {
        margin-top: 0px;
        font-size: 2rem;
        font-weight: 800;
    }

    label {
        color: white;
    }

    input {
        max-width: 300px;
        margin-left: auto;
        margin-right: auto;
    }

    .sidebar-nav a {
        display: inline-block;
        margin: 0 10px;
    }

    .sidebar-nav {
        position: absolute;
        bottom: 20px;
        left: 50%;
        margin-left: -117px;

        .created-by-js {
            margin-top: 10px;
            display: block;
        }

        .jslogo {
            margin: -5px 0 0 5px;
        }
    }
}

#page-content-wrapper {
    width: 100%;
    padding: 15px;
}

@media(min-width:768px) {
    #wrapper {
        padding: 0 0 0 $sidebar-width;
    }

    #wrapper.toggled {
        padding-left: 0;
    }

    #sidebar-wrapper {
        width: $sidebar-width;
    }

    #wrapper.toggled #sidebar-wrapper {
        width: 0;
    }

    #page-content-wrapper {
        padding: 20px;
    }

    #wrapper.toggled #page-content-wrapper {
        position: relative;
        margin-right: 0;
    }
}

/* Sidebar width for xs devises */
@media(max-width: 767px) {
    #wrapper {
    &.toggled {
        padding-left: $sidebar-width-xs;

        #sidebar-wrapper {
            width: $sidebar-width-xs;
        }

        #page-content-wrapper {
            margin-right: -$sidebar-width-xs;
        }
    }

    }

    #sidebar-wrapper {
        left: $sidebar-width-xs;
        margin-left: -$sidebar-width-xs;
    }
}


