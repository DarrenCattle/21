.complete-or-fail {
    text-align: center;
}

.complete-or-fail .button {
    width: 120px;
    margin: 20px 10px;
    padding: 10px 0;
    display: inline-block;
    border: solid 3px #fff;
    border-radius: 2000px;
    font-weight: 500;
    color: white;
    text-transform: uppercase;

    &.complete {
        background-color: #2fc96c;
        &:hover {
            opacity: 1;
        }   
    }
    
    &.fail {
        background-color: #ff4c4c;
        &:hover {
            opacity: 1;
        }
    }


}

#day {
    margin: 40px auto 0;
    display: block;
    height: 140px;
    width: 140px;
    line-height: 140px;

    -moz-border-radius: 50%;
    border-radius: 50%;

    background-color: white;
    color: #00c3d9;
    text-align: center;
    font-size: 5rem;
}

.feed {
    ul {
        list-style-type: none;
        padding-left: 0px;
    }
    h1 {
        text-align: center;
    }

    .feed-container {
        background-color: white;
        padding: 0px;
        border-radius: 4px;
    }

    .activity {
        padding: 15px 25px;
        border-bottom: 1px solid #eee;
        border-bottom: 1px solid rgba(0,0,0,0.08);
        &:hover {
            background-color: rgba(0,0,0,0.02);
        }

        .profile-pic {
            max-height: 60px;
            float: left;
            margin-left: -80px;
        }

        .content {
            display: inline-block;
            margin-left: 80px;
            position: relative;
        }
    }
}

