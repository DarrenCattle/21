
#intro {
    margin-top: 0px;
    padding: 0px;
    // background-image: url(<%= asset_path('balloon.jpg') %>);
    background-size: cover;
    background-position: bottom;
    background-repeat: no-repeat;
    height: 100%;
    
    color: #fff;
    text-align: center;

    
    .row { height: 100%; }

    .session-buttons {
        margin: 20px 0;
        a {
            margin-left: 5px;
            margin-right: 5px;
        }
    }

    .left {
        background-color: #6aa89b;

        h1 {
            margin: 0px;
            font-size: 5rem;
            color: #fff;
        }

        p {
            color: #fff;
            margin-top: 0px;
            margin-bottom: 30px;
        }
        
        .content {
            text-align: center;
        }
        
        @media(min-width: 768px) {
            height: 100%;
            .content{
                margin-top: -30px;
                position: relative;
                top: 50%;
                transform: translateY(-50%);
            }
        }

        @media(max-width: 767px) {
            padding: 50px 0;
        }

    }

    .right {
        color: #333;
        padding: 40px;

        @media(min-width: 768px) {
            height: 100%;
            .content{
                position: relative;
                top: 50%;
                transform: translateY(-50%);
            }
        }
    }
}

.cover {
    background-color: #6aa89b;

    h1, h2, p {
        color: white;
    }
}

#current-challenge {

    .complete-or-fail {
        text-align: center;
        list-style-type: none;
        padding-left: 0px;
    }

    .complete-or-fail a {
        width: 120px;
        margin-top: 20px;
        padding: 10px 0;
        display: inline-block;
        border: solid 2px;
        border-radius: 2000px;
        font-weight: 600;
        &.complete {
            background-color: white;
            color: #6aa89b;
        }
        &.fail {
            border-color: white;
            color: white;
        }
    }

    #day {
        margin: 0px auto;
        display: block;
        height: 100px;
        width: 100px;
        line-height: 100px;

        -moz-border-radius: 50%;
        border-radius: 50%;

        background-color: white;
        color: #6aa89b;
        text-align: center;
        font-size: 3rem;
    }
}

.feed {
    ul {
        list-style-type: none;
        padding-left: 0px;
    }
    h1 {
        text-align: center;
    }

    .feed-container {
        background-color: white;
        padding: 0px;
        border-radius: 4px;
    }

    .activity {
        padding: 15px 25px;
        border-bottom: 1px solid #eee;
        border-bottom: 1px solid rgba(0,0,0,0.08);
        &:hover {
            background-color: rgba(0,0,0,0.02);
        }

        .profile-pic {
            max-height: 60px;
            float: left;
            margin-left: -80px;
        }

        .content {
            display: inline-block;
            margin-left: 80px;
            position: relative;
        }
    }
}

