
#intro {
    margin-top: 0px;
    padding: 0px;
    // background-image: url(<%= asset_path('balloon.jpg') %>);
    background-size: cover;
    background-position: bottom;
    background-repeat: no-repeat;
    height: 100%;
    
    color: #fff;
    text-align: center;

    
    .row { height: 100%; }

    .session-buttons {
        margin: 20px 0;
        a {
            margin: 10px auto;
            display: block;
        }
    }

    .left {
        background-color: #00c3d9;

        h1 {
            margin: 0px;
            color: #fff;
        }

        p {
            color: #fff;
            margin-top: 0px;
            margin-bottom: 30px;
        }
        
        .content {
            text-align: center;
        }
        
        @media(min-width: 768px) {
            height: 100%;
            .content{
                margin-top: -30px;
                position: relative;
                top: 50%;
                transform: translateY(-50%);
            }
        }

        @media(max-width: 767px) {
            padding: 50px 0;
        }

    }

    .right {
        color: #333;
        padding: 40px;

        @media(min-width: 768px) {
            height: 100%;
            .content{
                position: relative;
                top: 50%;
                transform: translateY(-50%);
            }
        }
    }
}

.cover {
    background-color: #00c3d9;

    h1, h2, p {
        color: white;
    }
}


#wrapper {
    padding-left: 0;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
    &.toggled {
        padding-left: 400px;

        #sidebar-wrapper {
            width: 400px;
        }

        #page-content-wrapper {
            position: absolute;
            margin-right: -400px;
        }
    }

}

/* Start Sidebar */
/* Start Sidebar */

#sidebar-wrapper {
    z-index: 1000;
    position: fixed;
    left: 400px;
    padding: 20px;
    width: 0;
    height: 100%;
    margin-left: -400px;
    overflow-y: auto;
    background: #00c3d9;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;

    text-align: center;

    h2, p {
        color: white;
    }
}

#page-content-wrapper {
    width: 100%;
    padding: 15px;
}

@media(min-width:768px) {
    #wrapper {
        padding-left: 400px;
    }

    #wrapper.toggled {
        padding-left: 0;
    }

    #sidebar-wrapper {
        width: 400px;
    }

    #wrapper.toggled #sidebar-wrapper {
        width: 0;
    }

    #page-content-wrapper {
        padding: 20px;
    }

    #wrapper.toggled #page-content-wrapper {
        position: relative;
        margin-right: 0;
    }
}

/* End Sidebar */
/* End Sidebar */

.complete-or-fail {
    text-align: center;
    list-style-type: none;
    padding-left: 0px;
}

.complete-or-fail a {
    width: 120px;
    margin-top: 20px;
    padding: 10px 0;
    display: inline-block;
    border: solid 2px;
    border-radius: 2000px;
    font-weight: 600;
    &.complete {
        background-color: white;
        color: #00c3d9;
    }
    &.fail {
        border-color: white;
        color: white;
    }
}

#day {
    margin: 0px auto;
    display: block;
    height: 100px;
    width: 100px;
    line-height: 100px;

    -moz-border-radius: 50%;
    border-radius: 50%;

    background-color: white;
    color: #00c3d9;
    text-align: center;
    font-size: 3rem;
}

.feed {
    ul {
        list-style-type: none;
        padding-left: 0px;
    }
    h1 {
        text-align: center;
    }

    .feed-container {
        background-color: white;
        padding: 0px;
        border-radius: 4px;
    }

    .activity {
        padding: 15px 25px;
        border-bottom: 1px solid #eee;
        border-bottom: 1px solid rgba(0,0,0,0.08);
        &:hover {
            background-color: rgba(0,0,0,0.02);
        }

        .profile-pic {
            max-height: 60px;
            float: left;
            margin-left: -80px;
        }

        .content {
            display: inline-block;
            margin-left: 80px;
            position: relative;
        }
    }
}

.panel {
    margin: 20px auto;
    max-width: 600px;
}

