@font-face {
    font-family: 'Gibson';
    src: url('<%= asset_path("gibson-light-webfont.eot") %>');
    src: url('<%= asset_path("gibson-light-webfont.eot?#iefix") %>') format('embedded-opentype'),
         url('<%= asset_path("gibson-light-webfont.woff") %>') format('woff'),
         url('<%= asset_path("gibson-light-webfont.ttf") %>') format('truetype'),
         url('<%= asset_path("gibson-light-webfont.svg#gibson_light") %>') format('svg');
    font-weight: 100;
    font-style: normal;
}

