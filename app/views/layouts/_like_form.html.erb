<% if current_user %>
	<div id="like_form">
			<span class="like-counter"><%= likes_for activity %></span>
		<% if current_user.likes?(activity) %>
			<%= render 'likes/unlike', activity: activity %>
		<% else %>
			<%= render 'likes/like', activity: activity %>
		<% end %>
	</div>
<% end %>