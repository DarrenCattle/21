	<div class="comments-container">
		<ul id="comment-list-<%= activity.id %>" class="comment-list">
			<% if activity.comments.count > 0 %>
				<% activity.comments.each do |comment| %>
					<li class="comment">
						<%= image_tag comment.user.gravatar_url, class: "img-circle" %>
						<span class="comment-name"><%= comment.user.name if comment.user %>:</span> <%= comment.comment %>
					</li>
				<% end %>
			<% end %>
		</ul>
	</div>