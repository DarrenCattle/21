<section class="feed">
	<div class="container">
		<div class="col-md-8 col-md-offset-2 feed-container">
			<ul>
			<% @activities.each do |activity| %>
				<li class="activity">
					<div class="content">
						<%= image_tag activity.owner.gravatar_url, class: "profile-pic img-circle" %>
						<%= link_to activity.owner.name, user_path(activity.owner) if activity.owner %>
						<%= render_activity activity %>
					</div>
				</li>
			<% end %>
			</ul>
		</div> <!-- end col -->
	</div> <!-- end container -->
</section>