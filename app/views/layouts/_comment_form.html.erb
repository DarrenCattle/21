<div class="add-comment">
	<%= simple_form_for Comment.new, url: comments_path, method: 'post', remote: true do |f| %>
			<%= f.input :comment, as: :string, input_html: { class: "form-control" }, label: false, placeholder: "Write a comment..." %> 
			<%= f.input :commentable_id, as: :hidden, input_html: { value: activity.id } %> 
			<%= f.submit "Comment", class: "button button-secondary" %> 
	<% end %>
</div>