<% if activity.trackable %>

	<li class="activity update-days">
		<div class="row">
			<div class="profile-pic-container">
				<%= image_tag activity.owner.gravatar_url, class: "img-circle center-block img-responsive" %>
			</div>
			<div class="content">
				<%= link_to activity.owner.name, user_path(activity.owner) if activity.owner %> completed one more day!
				<span class="time-ago"><%= time_ago_in_words(activity.created_at) %> ago.</span><br>
				<%= activity.message %>
			</div>
		</div>
	</li>
	

<% else %>
  [Deleted]
<% end %>

