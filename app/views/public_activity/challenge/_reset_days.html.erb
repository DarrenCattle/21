<% if activity.trackable %>
  <li class="activity reset-days">
		<div class="row">
			<div class="profile-pic-container">
				<%= image_tag activity.owner.gravatar_url, class: "img-circle center-block img-responsive" %>
			</div>
			<div class="day-container">
				<span class="day">Day 0</span>
			</div>
			<div class="content">
				<span class="first-line">	
					<%= link_to activity.owner.name, user_path(activity.owner), class: "name" if activity.owner %> failed 
					<span class="time-ago"><%= time_ago_in_words(activity.created_at) %></span>
				</span>
				<%= link_to activity.trackable.name, activity.trackable, class: "challenge" if activity.owner %><br>
				<span class="message"><%= activity.message %></span>
				<%= render 'layouts/comments', activity: activity %>
				<%= render 'layouts/activity_footer', activity: activity %>
				<%= render 'layouts/comment_form', activity: activity %>
			</div>
		</div>
	</li>
<% else %>
  [Deleted]
<% end %>

