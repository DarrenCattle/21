<% if activity.trackable %>
  <li class="activity create">
		<div class="row">
			<div class="profile-pic-container">
				<%= image_tag activity.owner.gravatar_url, class: "img-circle center-block img-responsive" %>
			</div>
			<div class="content">
				<%= link_to activity.owner.name, user_path(activity.owner) if activity.owner %> started a new challenge. <%= time_ago_in_words(activity.created_at) %> ago.<br>
				<%= link_to activity.trackable.name, activity.trackable if activity.owner %><br>
				
			</div>
		</div>
	</li>
<% else %>
  which has since been removed
<% end %>